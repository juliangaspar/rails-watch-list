<h1><%= @list.name %></h1>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">
      <%= bookmark.comment %> |
      <%= bookmark.movie.title %>
    </li>
  <% end %>
</ul>
<%= link_to 'Go to lists', lists_path %>
<%= link_to 'Delete', list_path(@list),
  data: {turbo_method: :delete, turbo_confirm: 'Seguro?'} %>
